pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'hello step'
                sleep 5
            }
        }
        stage('Build') {
            steps {
                echo 'Build step'
                sleep 5
            }
        }
        stage('Test') {
            steps {
                echo 'Test step'
                sleep 5
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy step'
            }
        }
    }
}
